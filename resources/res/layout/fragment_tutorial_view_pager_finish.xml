<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <SurfaceView android:visibility="gone" android:layout_width="0px" android:layout_height="0px"/>
    <TextView android:id="@+id/text_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textIsSelectable="false" style="@style/TitleText"/>
    <ScrollView android:id="@+id/scroller_body" android:scrollbars="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_below="@+id/text_title">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/text_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:textIsSelectable="false" style="@style/InfoText"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/tip_list" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/text_info" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <TextView android:id="@+id/text_info2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tip_list" android:textIsSelectable="false" style="@style/InfoText"/>
            <TextureView android:id="@+id/video" android:layout_marginLeft="@dimen/tutorial_image_finished_margin_side" android:layout_marginTop="@dimen/tutorial_image_finished_margin_top_bottom" android:layout_marginRight="@dimen/tutorial_image_finished_margin_side" android:layout_below="@+id/text_info2" android:layout_alignParentBottom="true" style="@style/LearnMoreTextureView"/>
            <ImageView android:id="@+id/tutorial_image" android:visibility="gone" android:layout_height="@dimen/night_display_tutorial_image_height" android:layout_marginLeft="@dimen/tutorial_image_finished_margin_side" android:layout_marginTop="@dimen/tutorial_image_finished_margin_top_bottom" android:layout_marginRight="@dimen/tutorial_image_finished_margin_side" android:scaleType="fitCenter" android:layout_below="@+id/text_info2" style="@style/LearnMoreImageView"/>
            <TextView android:gravity="center" android:id="@+id/text_info_bottom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/tutorial_optin_image_margin_bottom" android:layout_below="@+id/tutorial_image" android:textIsSelectable="false" android:layout_marginStart="@dimen/tutorial_optin_margin_side" android:layout_marginEnd="@dimen/tutorial_optin_margin_side" style="@style/InfoTextFinished"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
