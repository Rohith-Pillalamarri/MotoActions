<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/tutorial_onenav_root" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/frame_cancel_button" android:layout_width="wrap_content" android:layout_height="@dimen/tutorial_button_height" android:layout_marginTop="@dimen/softonenav_tutorial_cancel_margin_button_top" android:layout_marginEnd="@dimen/softonenav_tutorial_cancel_margin_button_end" android:layout_alignParentEnd="true" style="@style/FlatButtonNeutral">
        <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_soft_onenav_tutorial_cancel" android:textIsSelectable="false" android:layout_marginStart="@dimen/onenav_cancel_button_margin" android:layout_marginEnd="@dimen/onenav_cancel_button_margin" style="@style/ButtonTextFlatBlack"/>
    </FrameLayout>
    <TextView android:textSize="@dimen/softonenav_tutorial_title_font_size" android:textStyle="bold" android:textColor="@color/parasailing_500" android:id="@+id/softonenav_tutorial_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/softonenav_tutorial_title_margin_top" android:layout_marginBottom="@dimen/softonenav_tutorial_title_margin_bottom" android:text="@string/try_it_out" android:textIsSelectable="false" android:layout_marginStart="@dimen/softonenav_tutorial_title_margin_start" android:layout_toStartOf="@+id/frame_cancel_button" android:layout_alignParentStart="true"/>
