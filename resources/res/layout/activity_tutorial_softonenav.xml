        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <include android:id="@+id/softonenav_tutorial_step_home" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/softonenav_step_margin_bottom" layout="@layout/component_softonenav_step"/>
            <include android:id="@+id/softonenav_tutorial_step_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/softonenav_step_margin_bottom" android:layout_below="@+id/softonenav_tutorial_step_home" layout="@layout/component_softonenav_step"/>
            <include android:id="@+id/softonenav_tutorial_step_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/softonenav_step_margin_bottom" android:layout_below="@+id/softonenav_tutorial_step_left" layout="@layout/component_softonenav_step"/>
            <include android:id="@+id/softonenav_tutorial_step_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/softonenav_step_margin_bottom" android:layout_below="@+id/softonenav_tutorial_step_up" layout="@layout/component_softonenav_step"/>
            <include android:id="@+id/softonenav_tutorial_step_assistant" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/softonenav_step_margin_bottom" android:layout_below="@+id/softonenav_tutorial_step_right" layout="@layout/component_softonenav_step"/>
        </RelativeLayout>
    </ScrollView>
    <TextView android:textSize="@dimen/softonenav_tutorial_step_font_size" android:gravity="center" android:id="@+id/softonenav_tutorial_feedback_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/softonenav_tutorial_feedback_margin_bottom" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textIsSelectable="false"/>
    <ImageView android:id="@+id/softonenav_tutorial_feedback_image" android:visibility="invisible" android:layout_width="@dimen/softonenav_tutorial_feedback_image_size" android:layout_height="@dimen/softonenav_tutorial_feedback_image_size" android:layout_marginBottom="@dimen/softonenav_tutorial_feedback_margin_bottom" android:src="@drawable/ic_action_done" android:tint="@color/parasailing_500" android:layout_above="@+id/softonenav_tutorial_feedback_text" android:layout_centerHorizontal="true"/>
</RelativeLayout>
